<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="android:windowBackground">@color/colorPrimaryLight</item>

        <!-- Activity transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>
        <!---->
    </style>

    <style name="TitleTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorTextIcons</item>
        <item name="android:textSize">32sp</item>
    </style>

    <!--<style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">-->
        <!--<item name="cardUseCompatPadding">true</item>-->
        <!--<item name="cardElevation">8dp</item>-->
        <!--<item name="cardCornerRadius">8dp</item>-->
    <!--</style>-->

    <style name="LayoutStyle">
        <!--<item name="android:padding">@dimen/MainWindowPadding</item>-->
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
    </style>

</resources>
